<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs", { csrfToken: csrfToken }) %>

  <p>The secret word is: <%= secretWord %></p>
  <p>Would you like to change it?</p>

  <form method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <label for="secretWord">New secret word:</label>
    <input name="secretWord" required /><br />
    <button type="submit">Submit</button>
  </form>

  <script>
    console.log("CSRF Token in form:", document.querySelector('input[name="_csrf"]').value);
  </script>
  
