<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs", { csrfToken: csrfToken }) %>

<h2>Brands List</h2>
<table id="brands-table">
  <tr id="brands-table-header">
    <th>Name</th>
    <th>Category</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>
  <% if (brands && brands.length) { %>
    <% brands.forEach((brand) => { %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= brand.category %></td>
        <td><%= brand.description %></td>
        <td>
          <a href="/brands/edit/<%= brand._id %>">
            <button type="button">edit</button>
          </a>
        </td>
        <td>
          <form method="POST" action="/brands/delete/<%= brand._id %>" style="display: inline">
            <button type="submit">delete</button>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          </form>
        </td>
      </tr>
    <% }) %>
  <% } %>
</table>
<a href="/brands/new"><button>Add a new brand</button></a>

